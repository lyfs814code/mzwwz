<!DOCTYPE html>
<html>
<head>
<script type="text/javascript">
	$(function() {
		$("#jvForm").bootstrapValidator({
			feedbackIcons : {
				valid : 'glyphicon glyphicon-ok',
				invalid : 'glyphicon glyphicon-remove',
				validating : 'glyphicon glyphicon-refresh'
			},
			fields : {
				detail : {
					validators : {

					}
				}
			},
			submitHandler : function(validator, form, submitButton) {
				$.web.submit("jvForm");
			}
		});
	});
</script>
</head>
<body>
	<div class="row">
		<div class="col-lg-12">
			<!-- 页面信息 -->
			<div class="console-title console-title-border clearfix">
				<div class="pull-left">
					<h3>${commonPara.name!}修改</h3>
				</div>
				<div class="pull-right">[@p.history_back/]</div>
			</div>
			<!-- 编辑表单 -->
			[@p.form id="jvForm" action="commonPara/update.do"] <input
				type="hidden" name="code" value="${commonPara.code!}" />
			<div class="clearfix">
				<div class="form-group col-sm-12 col-lg-12">
					<label>${commonPara.name!}</label> 
					[@p.editor_baidu name="detail" id="detail" value="${commonPara.detail!}"/]
				</div>
			</div>
			<div class="clearfix">
				<div class="col-sm-12 col-lg-12">[@p.submit /][@p.cancel/]</div>
			</div>
			[/@p.form]
		</div>
	</div>
</body>
</html>
