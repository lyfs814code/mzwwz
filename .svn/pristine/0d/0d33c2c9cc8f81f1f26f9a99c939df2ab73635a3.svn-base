<!DOCTYPE html>
<html>
<head>
</head>
<body>
	<div class="row">
		<div class="col-lg-12">
			<!-- 页面信息 -->
			<div class="console-title console-title-border clearfix">
				<div class="pull-left">
					<h3>办事指南</h3>
				</div>
				<div class="pull-right">[@p.add obj="orgGuide" /]</div>
			</div>
			<!-- 查询表单 -->
			<form class="form-inline form-search" action="orgGuide/list.do" method="post" id="tableForm">
				<input type="hidden" name="paging.currentPage" value="${orgGuideCriteria.paging.currentPage}" />
				<div class="form-group">
					<label>名称：</label>
					<input type="text" name="titleQry" class="form-control"  placeholder="" value="${orgGuideCriteria.titleQry!}" />						
				</div>
				<div class="form-group">
					<label>发布状态：</label>
					[@p.constant_radio code_type="IS_PUBLISH" name="publishFlagQry" value="${orgGuideCriteria.publishFlagQry!}" search="true"/]	
				</div>
				[@p.search/]
			</form>
			<!-- 数据列表 -->
			<div class="row">
				<div class="col-lg-12">
				[@p.table value=orgGuideList paging=orgGuideCriteria.paging;orgGuide,i,has_next]
								[@p.column title="图标"]<img class="img-rounded" src="${orgGuide.imgTitle!}" style="width: 30px;height: 30px;">[/@p.column]
								[@p.column title="名称"]<a onclick="btnHref('#orgGuide/detail.do?id=${orgGuide.id!}')">${orgGuide.title!}</a>[/@p.column]
								[@p.column title="来源"]${orgGuide.source!}[/@p.column]
								[@p.column title="发布状态"][@p.constant_value code_type="IS_PUBLISH" value="${orgGuide.publishFlag!}"/]	[/@p.column]
							[@p.column title="操作" style="width:130px;"] 
						[@p.operate id="${orgGuide.id}" parID="id" obj="orgGuide" checkDel="false"/]
					[/@p.column] 				
				[/@p.table]
				</div>
			</div>
		</div>
	</div>
</body>
</html>
