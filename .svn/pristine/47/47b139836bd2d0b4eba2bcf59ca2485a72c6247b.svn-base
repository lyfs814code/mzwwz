<!DOCTYPE html>
<html>
<head>
<script type="text/javascript">
	$(function() {
		$("#jvForm").bootstrapValidator({
			feedbackIcons: {
	            valid: 'glyphicon glyphicon-ok',
	            invalid: 'glyphicon glyphicon-remove',
	            validating: 'glyphicon glyphicon-refresh'
	        },
			fields: {
								id:{
	            	validators: {
	                	
	            	}
	            },
								name:{
	            	validators: {
	                	notEmpty: {
	                        message: '姓名不能为空'
	                    },
	            	}
	            },
								phone:{
	            	validators: {
	                	notEmpty: {
	                        message: '联系电话不能为空'
	                    },
	                    regexp: {
	                        regexp:/^(0|86|17951)?(13[0-9]|15[012356789]|17[678]|18[0-9]|14[57])[0-9]{8}$/,
	                    	message: '请输入有效的联系电话'
	                    }
	            	}
	            },
								email:{
	            	validators: {
	                	
	            	}
	            },
								detail:{
	            	validators: {
	                	notEmpty: {
	                        message: '内容不能为空'
	                    }
	            	}
	            },
								createTime:{
	            	validators: {
	                	
	            	}
	            },
								replyFlag:{
	            	validators: {
	                	
	            	}
	            },
							},
			submitHandler: function(validator, form, submitButton) {
				$.web.submit("jvForm");
			}
		});
	});
</script>
</head>
<body>
	<div class="row">
		<div class="col-lg-12">
			<!-- 页面信息 -->
			<div class="console-title console-title-border clearfix">
				<div class="pull-left">
					<h3>新增留言</h3>
				</div>
				<div class="pull-right">[@p.history_back/]</div>
			</div>
			<!-- 新增表单 -->
			[@p.form id="jvForm" action="message/save.do"]
				<div class="clearfix">
					<div class="form-group col-sm-12 col-lg-3">
						<label>姓名</label>
						<input type="text" class="form-control" name="name"  value=""/>	
					</div>
				</div>
				<div class="clearfix">
					<div class="form-group col-sm-12 col-lg-3">
						<label>联系电话</label>
						<input type="text" class="form-control" name="phone"  value=""/>	
					</div>
					<div class="form-group col-sm-12 col-lg-3">
						<label>电子邮件</label>
						<input type="text" class="form-control" name="email"  value=""/>	
					</div>
				</div>
				<div class="clearfix">
					<div class="form-group col-sm-12 col-lg-3">
						<label>内容</label>
						<input type="text" class="form-control" name="detail"  value=""/>	
					</div>
				</div>
				<div class="clearfix">
					<div class="form-group col-sm-12 col-lg-3">
						<label>是否回复</label>
						[@p.constant_radio code_type="REPLY_FLAG" id="replyFlag" name="replyFlag" value="1"/]	
					</div>
				</div>
				<div class="clearfix">
					<div class="col-sm-12 col-lg-8">[@p.submit/][@p.cancel/]</div>
				</div>
				[/@p.form]
		</div>
	</div>
</body>
</html>
