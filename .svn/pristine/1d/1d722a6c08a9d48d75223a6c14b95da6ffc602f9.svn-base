body {
	font-family: '微软雅黑', '黑体', serif, '宋体';
	font-size: 12px;
	background: #191c2c;
}

ul li {
	font-size: 30px;
	color: #2ec0f6;
}

li {
	list-style-type: none
}

a, a:active {
	text-decoration: none;
	font-family: '微软雅黑';
	outline: 0
}

.title0, .title1 {
	text-align: center;
	color: #2ec0f6;
	font-size: 40px;
	height: 100px;
	line-height: 100px;
}

.title1 {
	color: #fff;
	font-size: 20px;
	height: 30px;
	line-height: 30px;
}

.slogan-div {
	z-index: -1000;
	float: left;
	position: absolute;
	left: 5%;
	top: 20%;
}

.login-div {
	z-index: 1000;
	float: right;
	position: absolute;
	right: 3%;
	top: 10%;
}

.login-title {
	font-size: 14px;
	font-family: 'microsoft yahei';
	position: absolute;
	top: 165px;
	left: 80px;
}

.login-div-form {
	background-color: #23305a;
	width: 300px;
	height: auto;
	margin: 120px auto 0 auto;
	color: #2ec0f6;
}

.login-div-form form {
	padding: 10px;
}

.login-div-form form button {
	cursor: pointer;
	width: 270px;
	height: 44px;
	margin-bottom: 20px;
	padding: 0;
	background: #2ec0f6;
	-moz-border-radius: 6px;
	-webkit-border-radius: 6px;
	border-radius: 6px;
	border: 1px solid #2ec0f6;
	-moz-box-shadow: 0 15px 30px 0 rgba(255, 255, 255, .25) inset, 0 2px 7px
		0 rgba(0, 0, 0, .2);
	-webkit-box-shadow: 0 15px 30px 0 rgba(255, 255, 255, .25) inset, 0 2px
		7px 0 rgba(0, 0, 0, .2);
	box-shadow: 0 15px 30px 0 rgba(255, 255, 255, .25) inset, 0 2px 7px 0
		rgba(0, 0, 0, .2);
	font-family: 'PT Sans', Helvetica, Arial, sans-serif;
	font-size: 14px;
	font-weight: 700;
	color: #fff;
	text-shadow: 0 1px 2px rgba(0, 0, 0, .1);
	-o-transition: all .2s;
	-moz-transition: all .2s;
	-webkit-transition: all .2s;
	-ms-transition: all .2s;
}

.roundabout-holder {
	list-style: none;
	width: 500px;
	height: 300px;
	margin: 0px auto;
}

.roundabout-moveable-item {
	font-size: 12px !important;
	height: 120px;
	width: 120px;
	cursor: pointer;
	padding: 5px;
	border: 1px solid #aaaaaa;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	background: #f9f9f9;
}

.roundabout-moveable-item img {
	height: 100%;
	width: 100%;
	background-color: #FFFFFF;
	margin: 0;
}

.roundabout-in-focus img{
	cursor: auto;
	margin-bottom: 20px;
}

.roundabout-in-focus:hover {
	-webkit-box-shadow: 0px 0px 20px #787878;
	-moz-box-shadow: 0px 0px 20px #787878;
	background: #f9f9f9;
}

.roundabout a:active, .roundabout a:focus, .roundabout a:visited {
	outline: none;
	text-decoration: none;
}

.roundabout li {
	margin: 0
}