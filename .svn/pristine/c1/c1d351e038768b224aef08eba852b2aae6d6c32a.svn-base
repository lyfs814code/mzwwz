<head>
</head>
<body>
	<div class="row">
		<div class="col-lg-12">
			<!-- 页面信息 -->
			<div class="console-title console-title-border clearfix">
				<div class="pull-left">
					<h3>${commonPara.name!}</h3>
				</div>
			</div>
			<!-- 详细表单 -->
			[@p.form id="" action=""]
				<input type="hidden"  name="code" value="${commonPara.code!}" />			
