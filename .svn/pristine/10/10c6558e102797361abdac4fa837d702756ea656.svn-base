<!DOCTYPE html>
<html>
<head>
<title>留言板</title>
<meta name="viewport" content="width=device-width,user-scalable=no" />
<link rel="stylesheet"
	href="../res/bootstrap-3.3.5/css/bootstrap.min.css">
<link rel="stylesheet"
	href="../res/Font-Awesome-master/css/font-awesome.min.css">

<!-- jQuery文件。务必在bootstrap.min.js 之前引入 -->
<script type="text/javascript" src="../res/js/jquery.min.js"></script>
<!-- Bootstrap 核心 JavaScript 文件 -->
<script type="text/javascript"
	src="../res/bootstrap-3.3.5/js/bootstrap.min.js"></script>
<!-- 验证插件 -->
<script type="text/javascript" src="../res/bootstrapvalidator-0.4.5/js/bootstrapValidator.min.js"></script>

<script type="text/javascript">
	$(function() {
		$("#jvForm").bootstrapValidator({
			feedbackIcons: {
	            valid: 'glyphicon glyphicon-ok',
	            invalid: 'glyphicon glyphicon-remove',
	            validating: 'glyphicon glyphicon-refresh'
	        },
			fields: {
				name:{
	            	validators: {
	            		notEmpty:{message:"该项不能为空"}
	            	}
	            },
	            detail:{
	            	validators: {
	            		notEmpty:{message:"该项不能为空"}
	            	}
	            }
			},
			submitHandler: function(validator, form, submitButton) {
				validator.defaultSubmit();  
			}
		});
	});
</script>
</head>
<body>
	<div class="container">
		<div class="panel panel-primary " style="width: 100%;">
			<div class="panel-heading">
				<h1 class="panel-title">留言板</h1>
			</div>
			<div class="panel-body">
				[@p.form id="jvForm" action="saveMessage.do"]
				<div class="form-group" style="border: 1px solid #ddd;border-bottom:0px;border-top-left-radius: 3px;border-top-right-radius: 3px;padding: 5px;">
					<span class="glyphicon glyphicon-user"></span>
					<input type="text" class="form-control" style="border:0px;display: inline-block;width:80%;" placeholder="姓名（必填）" name="name"  value=""/>
				</div>
				<div class="form-group"  style="border: 1px solid #ddd;border-bottom:0px;padding: 5px;">
					<span class="glyphicon glyphicon-envelope"></span>
					<input type="text" class="form-control"style="border:0px;display: inline-block;width:80%;" placeholder="电子邮件"  name="email"  value=""/>
				</div>
				<div class="form-group" style="border: 1px solid #ddd;border-bottom:0px;padding: 5px;">
					<span class="glyphicon glyphicon-phone"></span>
					<input type="text" class="form-control"style="border:0px;display: inline-block;width:80%;" placeholder="联系电话"  name="phone"  value=""/>
				</div>
				<div class="form-group" style="border: 1px solid #ddd;border-bottom-right-radius: 3px;border-bottom-left-radius: 3px;padding: 5px;">
					<span style="font-size: 100%" class="glyphicon glyphicon-list-alt"></span>
					<input type="text" class="form-control"style="border:0px;display: inline-block;width:80%;" placeholder="内容（必填）"  name="detail"  value=""/>
				</div>
				<button type="submit" class="btn btn-primary" style="margin-top: 10px;width: 100%;">提交</button>
				[/@p.form]
			</div>
	</div>
	</div>
</body>
</html>
