<#macro img_file  name src id="" label="图片预览" >
<div class="panel panel-default" style="width:180px;float:left;">
	<div class="panel-heading">${label}</div>
	<div class="panel-body">
		<img id="imgPre_${id}" src="${src}" width="160px" height="150px" /> 
		<input  type="file" name="${name}" id="exampleInputFile_${id}" style="margin-top:10px;" onchange="preImg(this.id,'imgPre_${id}');">
	</div>
</div>
</#macro>