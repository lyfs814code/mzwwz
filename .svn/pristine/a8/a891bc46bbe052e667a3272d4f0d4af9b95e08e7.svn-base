<!DOCTYPE html>
<html>
<head>
<script type="text/javascript">
	$(function() {
		$("#jvForm").bootstrapValidator({
			fields : {
				title : {
					validators : {
						notEmpty : {
							message : '名称不能为空'
						}
					}
				},
				detail : {
					validators : {
						notEmpty : {
							message : '内容不能为空'
						}
					}
				}
			},
			submitHandler : function(validator, form, submitButton) {
				$.web.submit("jvForm");
			}
		});
	});
	
</script>
</head>
<body>
	<div class="row">
		<div class="col-lg-12">
			<!-- 页面信息 -->
			<div class="console-title console-title-border clearfix">
				<div class="pull-left">
					<h3>修改办事指南</h3>
				</div>
				<div class="pull-right">[@p.history_back/]</div>
			</div>
			<!-- 编辑表单 -->
			[@p.form id="jvForm" action="orgGuide/update.do" enctype="multipart/form-data"] 
			<input type="hidden" name="id" value="${orgGuide.id!}" />
			<div class="col-lg-8">
				<div class="clearfix">
					<div class="form-group col-lg-12">
						<label>名称</label> <input type="text" class="form-control"
							name="title" value="${orgGuide.title!}" />
					</div>
				</div>
				<div class="clearfix">
					<div class="form-group col-lg-6">
						<label>来源</label> <input type="text" class="form-control"
							name="source" value="${orgGuide.source!}" />
					</div>
					<div class="form-group col-lg-3">
						<label>发布状态</label> 
						[@p.constant_radio code_type="IS_PUBLISH" id="publishFlag" name="publishFlag" value="${orgGuide.publishFlag!}"/]	
					</div>
				</div>
				<div class="clearfix">
					<div class="form-group col-lg-12">
						<label>内容</label>
						[@p.editor_baidu name="detail" id="detail" value="${orgGuide.detail!}"/]
					</div>
				</div>
			</div>
			<div class="col-lg-4">
				<label>图标</label> 
				[@p.upload_image name="imgTitle" src="${orgGuide.imgTitle!}" item="1" value="${orgGuide.imgTitle!}" /]
			</div>
			<div class="clearfix">
				<div class="col-sm-12 col-lg-8">[@p.submit /][@p.cancel/]</div>
			</div>
			[/@p.form]
		</div>
	</div>
</body>
</html>
